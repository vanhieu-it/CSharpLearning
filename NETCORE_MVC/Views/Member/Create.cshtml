@model NETCORE_MVC.Services.CreateMemberRequest;

@{
    ViewData["Title"] = "Add new Member";
}

<h1>This is Add New Member Page</h1>

<h4>Member</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="form-group my-2">
                <label asp-for="FirstName" class="control-label my-1"></label>
                <input asp-for="FirstName" type="text" class="form-control" />
                <span asp-validation-for="FirstName" class="form-text text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="LastName" class="control-label my-1"></label>
                <input asp-for="LastName" type="text" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="Gender" class="control-label my-1"></label>
                <select class="form-select" asp-for="Gender">
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                    <option value="3">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="DateOfBirth" class="control-label my-1"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="PhoneNumber" class="control-label my-1"></label>
                <input asp-for="PhoneNumber" type="number" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="BirthPlace" class="control-label my-1"></label>
                <input asp-for="BirthPlace" type="text" class="form-control" />
                <span asp-validation-for="BirthPlace" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
