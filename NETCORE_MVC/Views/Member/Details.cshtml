@model NETCORE_MVC.Services.MemberDetailsModel;

@{
    ViewData["Title"] = "Infomation Member";
    var value = ViewData["Index"]?.ToString() ?? "";
    var index = !string.IsNullOrEmpty(value) ? int.Parse(value) : 0;
}

<h1>This is Infomation Member Page</h1>

<h4>Member</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-index="@index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="form-group my-2">
                <label asp-for="FirstName" class="control-label my-1"></label>
                <input asp-for="FirstName" type="text" class="form-control" readonly />
                <span asp-validation-for="FirstName" class="form-text text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="LastName" class="control-label my-1"></label>
                <input asp-for="LastName" type="text" class="form-control" readonly />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="DateOfBirth" class="control-label my-1"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" readonly />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="Gender" class="control-label my-1"></label>
                <input asp-for="Gender" type="text" class="form-control" readonly />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="PhoneNumber" class="control-label my-1"></label>
                <input asp-for="PhoneNumber" type="number" class="form-control" readonly />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="BirthPlace" class="control-label my-1"></label>
                <input asp-for="BirthPlace" type="text" class="form-control" readonly />
                <span asp-validation-for="BirthPlace" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="Age" class="control-label my-1"></label>
                <input asp-for="Age" type="number" class="form-control" readonly />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <a class="btn btn-danger btn-sm text-light" type="button" role="button" data-toggle="modal"
                    data-target="#deleteModal_@index">Delete</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="modal fade" id="deleteModal_@index" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="DeleteAndRedirectToResultView" asp-route-index="@index" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete member</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete member?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>