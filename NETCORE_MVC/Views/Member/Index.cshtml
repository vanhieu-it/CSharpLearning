@model IEnumerable<NETCORE_MVC.Services.MemberViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>This is list of member</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm" role="button">Add New Member</a>

</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.BirthPlace)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((value, i) => new { i, value }))
        {
            var value = item.value;
            var index = item.i;
            <tr>
                <td class="text-left">
                    <a asp-action="Details" asp-route-index="@index">@Html.DisplayFor(modelItem => value.FullName)</a>
                </td>
                <td>@Html.DisplayFor(modelItem => value.DateOfBirth)</td>
                <td>@Html.DisplayFor(modelItem => value.Gender)</td>
                <td>@Html.DisplayFor(modelItem => value.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => value.BirthPlace)</td>
                <td>@Html.DisplayFor(modelItem => value.Age)</td>
                <td>
                    <a role="button" class="btn btn-primary btn-sm" asp-action="Edit" asp-route-index="@index">Edit</a>
                    <a class="btn btn-danger btn-sm text-light" type="button" role="button" data-toggle="modal"
                       data-target="#deleteModal_@index">Delete</a>

                    <div class="modal fade" id="deleteModal_@index" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <form asp-action="Delete" asp-route-index="@index" method="post">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Delete member</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete member?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Delete</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
            </tr>
        }
    </tbody>
</table>
</td>