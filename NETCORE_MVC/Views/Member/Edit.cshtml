@model NETCORE_MVC.Services.EditMemberViewModel;

@{
    ViewData["Title"] = "Update Member";
    var value = ViewData["Index"]?.ToString() ?? "";
    var index = !string.IsNullOrEmpty(value) ? int.Parse(value) : 0;
}

<h1>This is Edit Member Page</h1>

<h4>Member</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-index="@index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>

            <div class="form-group my-2">
                <label asp-for="FirstName" class="control-label my-1"></label>
                <input asp-for="FirstName" type="text" class="form-control" />
                <span asp-validation-for="FirstName" class="form-text text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="LastName" class="control-label my-1"></label>
                <input asp-for="LastName" type="text" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="PhoneNumber" class="control-label my-1"></label>
                <input asp-for="PhoneNumber" type="number" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label asp-for="BirthPlace" class="control-label my-1"></label>
                <input asp-for="BirthPlace" type="text" class="form-control" />
                <span asp-validation-for="BirthPlace" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a type="submit" role="button" class="btn btn-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
